mport java.util.Scanner;

public class Main
  {
    public static void main (String[] args)

    {
       Scanner sc = new Scanner(System.in);

      System.out.print("Enter your string: ");

      String str = sc.nextLine();
      char first = 'p';
      char last =  'p';
        
      
      boolean pallindrome = true;
      for(int i = 0; i< str.length()/2; i--)
        {
            first = (str.charAt(i));
            last = (str.charAt(str.length() - 1 - i));
          if(first != last){
            pallindrome = false;
            break;
          }
          
          
        }

      if(pallindrome){
        System.out.println("The word: "+"'"+str+"'"+" is a palindrome and can be read the same both forwards and backwards.");
        
      }


    else {

        System.out.print("The word: "+"'"+str+"'"+" is not a palindrome and cannot be read the same forwards and backwards.");

        }
      
