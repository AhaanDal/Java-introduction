import java.util.Scanner;

public class Main
  {
    public static void main (String[] args)

    {
       Scanner sc = new Scanner(System.in);

      String username = "Student123"; 
     
      
       String password = "AbCdef"; //previously saved credentials

      

      int i = 0;
      System.out.println("Please Enter your username: ");
      
      while(true){
      String inUser = sc.nextLine();
      if (inUser.equalsIgnoreCase(username))
      {
        System.out.println("The user name is correct");
        System.out.println();
        System.out.println();
          
        break;
      }
      
        else 
      {
        System.out.println("The username entered is incorrect, please try again:");
        continue;
  
      } // code for getting username input



        
      }


      System.out.println("Please enter your password:");
     



      while(true){
        String inpassword = sc.nextLine();
        if (inpassword.equalsIgnoreCase(password))
        {
          System.out.println("The password is correct");
          break;
        }

          else 
        {
          System.out.println("The password entered is incorrect, please try again:");
          continue;

        } // code for getting password input




        }


      
      
      
        
      
     
        
