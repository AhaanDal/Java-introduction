import java.util.Scanner;


public class Main 
   
{
 public static void main( String[] args)
  
   {
       Scanner sc = new Scanner(System.in);


      
      System.out.print("Enter your first number");
      double num1 = sc.nextDouble();
      System.out.print("Enter your second number");
      double num2 = sc.nextDouble();
      System.out.print("Enter your operation as a symbol");
      char operater = sc.next().charAt(0);



      switch (operater){
         
         
         case '+':
            System.out.print("The sum of "+num1+" and "+num2+"is equal to "+(num1 + num2));
            break;
            
         case '-':
            System.out.print("The difference of "+num1+" and "+num2+"is equal to "+(num1 - num2));
            break;
         case '*':
            
            System.out.print("The product of "+num1+" and "+num2+"is equal to "+(num1 * num2));
            break;
            
            case '/':
            System.out.print("The quotient of "+num1+" and "+num2+"is equal to "+(num1 / num2));
            break;


            







            
      }
